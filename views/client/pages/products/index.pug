extends ../../layouts/default
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
     .col-12
       +box-head("Danh sách sản phẩm")

    .row 
      each item in products
        .col-4.mb-3
          .product-item
            .inner-image 
              img(src=item.thumbnail ,alt = "Hình ảnh")
            .inner-content 
              a(class = "inner-title" href = `/products/${item.slug}`) #{item.title}
              .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%
       


