extends ../../layouts/default
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main
  .container.my-3
    include ../../partials/list-btn-users.pug

    .row
     .col-12
       +box-head("Lời mời kết bạn")

    .row(data-users-accept = user.id)
      each item in users
        .col-6(user-id = item.id)
            div(class = "box-user add")
              div(class = "inner-avatar")
                img(src = item.avatar ? item.avatart : "https://png.pngtree.com/png-clipart/20190922/original/pngtree-business-male-user-avatar-vector-png-image_4774078.jpg" alt = "Minh Trí")
              
              div(class = "inner-info")
                div(class = "inner-name") #{item.fullName}
                div(class = "inner-button")
                  button(
                    class = "btn btn-sm btn-primary mr-1"
                    btn-accept-friend = item.id
                  ) Chấp nhận
                  button(
                    class = "btn btn-sm btn-secondary mr-1"
                    btn-refuse-friend = item.id
                  ) Xóa
                  button(
                    class = "btn btn-sm btn-secondary mr-1"
                    btn-deleted-friend = item.id
                    disabled
                  ) Đã xóa
                  button(
                    class = "btn btn-sm btn-primary mr-1"
                    btn-accepted-friend = item.id
                    disabled
                  ) Đã chấp nhận
  block script 
     script( type="module" src="/js/users.js")

      
                    